!!! 5
%html
	%head
		%meta{:charset=>'utf-8'}
		%title=(isset($pageTitle) ? $pageTitle.' - ' : '')."Salamander PHP Framework"
		=$headerHTML
	%body
		#header
			%a.scroll-pos.scroll-pos-right#fork{:data-min-scroll=>"65%",:data-max-scroll=>"100%",:data-formula-y=>"-0.25*t",:data-formula-x=>"-0.07*t",:data-relative=>"#header",:href=>"https://github.com/numtel/salamander"} Fork Me on Github!
			.body
				%h1.logo.scroll-pos{:data-min-scroll=>"-1%",:data-max-scroll=>"100%",:data-formula-y=>"-0.15*t",:data-relative=>"#header"} Salamander PHP Framework
		#contents
			.body
				%ul.nav-top
					%li.#{$pageId==='index' ? 'active' :''}
						%a{:href=>"#{$p}"} Overview
					%li.#{$pageId==='tutorial' ? 'active' :''}
						%a{:href=>"#{$p}tutorial"} Tutorial
					%li
						%a{:href=>"#{$node->root_http_path}docs"} Documentation
					%li
						%a{:href=>"https://github.com/numtel/salamander"} Download from GitHub
				=$content
		#footer
			.body
				%p.scroll-pos.scroll-pos-bottom{:data-min-scroll=>"-1%",:data-max-scroll=>"100%",:data-formula-y=>"-0.2*t",:data-relative=>"#footer"}
					Designed and built by 
					%a{:href=>'mailto:ben@salamanderphp.com'} ben@salamanderphp.com
					%br
					Code licensed under 
					%a{:href=>'http://www.gnu.org/licenses/'} GPL v3
					, documentation under 
					%a{:href=>'http://creativecommons.org/licenses/by/3.0/'} CC BY 3.0
